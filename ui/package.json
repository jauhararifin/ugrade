{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "author": {
    "name": "Jauhar Arifin",
    "url": "https://github.com/jauhararifin",
    "email": "jauhararifin10@gmail.com"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "com.github.jauhararifin.ugrade",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@blueprintjs/core": "^3.15.0",
    "@blueprintjs/datetime": "^3.8.0",
    "@blueprintjs/icons": "^3.7.0",
    "@matejmazur/react-mathjax": "^0.1.10",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.0",
    "@types/react": "16.8.10",
    "@types/react-dom": "16.8.3",
    "apollo-boost": "^0.3.1",
    "apollo-client": "^2.5.1",
    "apollo-link-context": "^1.0.17",
    "apollo-upload-client": "^10.0.0",
    "classnames": "^2.2.6",
    "electron-is-dev": "^1.1.0",
    "formik": "^1.5.1",
    "github-markdown-css": "^3.0.1",
    "graphql": "^14.2.1",
    "history": "^4.9.0",
    "lodash": "^4.17.13",
    "mobx": "^5.9.4",
    "mobx-react-lite": "^1.2.0",
    "mobx-react-router": "^4.0.7",
    "moment": "^2.24.0",
    "node-sass-chokidar": "^1.3.4",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-ace": "^6.4.0",
    "react-apollo-hooks": "^0.4.4",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.0.6",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "react-transition-group": "^2.7.1",
    "remark-math": "^1.0.6",
    "typescript": "3.4.1",
    "yup": "^0.27.0"
  },
  "scripts": {
    "preinstall": "rm -f node_modules/@",
    "postinstall": "ln -s `pwd`/src node_modules/@",
    "start": "npm-run-all build:css --parallel watch:css start:ts",
    "start:ts": "react-scripts start",
    "start:electron": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "prebuild:electron": "yarn build",
    "build:electron": "build --linux deb tar.xz",
    "build": "npm-run-all build:css build:ts",
    "build:ts": "react-scripts build",
    "build:css": "node-sass-chokidar --quiet src/ -o src/ --importer=node_modules/node-sass-tilde-importer",
    "watch:css": "node-sass-chokidar --quiet src/ -o src/ --importer=node_modules/node-sass-tilde-importer --watch --recursive",
    "graphql:introspect-schema": "apollo schema:download --endpoint=http://localhost:8000/graphql schema.json",
    "graphql:generate-types": "apollo codegen:generate --localSchemaFile=schema.json --target=typescript --includes=src/**/*.{ts,tsx} --tagName=gql --addTypename --globalTypesFile=src/types/graphql-global-types.ts types",
    "graphql:codegen": "npm-run-all graphql:introspect-schema graphql:generate-types",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/apollo-upload-client": "^8.1.1",
    "@types/classnames": "^2.2.7",
    "@types/history": "^4.7.2",
    "@types/lodash": "^4.14.123",
    "@types/react-document-title": "^2.0.3",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-transition-group": "^2.0.16",
    "@types/yup": "^0.26.12",
    "concurrently": "^4.1.0",
    "electron": "^9.4.0",
    "electron-builder": "^20.39.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "wait-on": "^3.2.0"
  }
}
